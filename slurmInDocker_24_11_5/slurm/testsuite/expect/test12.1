source ./globals

set matches     0
set not_support 0

#
# Check accounting config and bail if not found.
#
if {[get_config_param "AccountingStorageType"] ne "accounting_storage/slurmdbd"} {
	skip "This test can't be run without a usable AccountStorageType"
}

#
# Verify the sacct help format
#
set output [run_command -fail "$sacct --help"]

subtest {[regexp {sacct...OPTION} $output] &&
         [regexp {Valid..OPTION..values are:} $output] &&
         [regexp -- {--duplicates} $output]} "Verify sacct --help option"
