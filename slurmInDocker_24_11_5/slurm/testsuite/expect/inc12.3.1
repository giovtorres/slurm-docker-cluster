source ./globals
source ./globals_accounting

proc inc12_3_1 {job_id_1 job_id_2 job_name_1 job_name_2 test_acct} {
	global sacct

	log_info "Search for job ID $job_id_1 having name $job_name_1"
	set output [run_command_output -fail "$sacct -A '$test_acct' --name=$job_name_1 -X -P -o jobid --noheader"]
	subtest [regexp -line "^$job_id_1$" $output] "sacct should show job 1 ($job_id_1) as having name $job_name_1"
	subtest {![regexp -line "^$job_id_2$" $output]} "sacct should not show job 2 ($job_id_2) as having name $job_name_1"

	log_info "Search for job ID $job_id_2 having name $job_name_2"
	set output [run_command_output -fail "$sacct -A '$test_acct' --name=$job_name_2 -X -P -o jobid --noheader"]
	subtest {![regexp -line "^$job_id_1$" $output]} "sacct should not show job 1 ($job_id_1) as having name $job_name_2"
	subtest [regexp -line "^$job_id_2$" $output] "sacct should show job 2 ($job_id_2) as having name $job_name_2"
}
